---
export interface Props {
	title: string;
	price: number;
	desc?: string;
	imageUrl: string;
	code?: string;
    tag: string;
}

const { title, price, desc, imageUrl, code, tag } = Astro.props;
---

<div class="product-card flex flex-col bg-white shadow-md p-3 relative">
    <div class="flex flex-col md:flex-row">
        <div class="badge self-end px-4 font-extralight text-lg text-white">#{tag}</div>
        <div class="flex flex-col self-center md:self-start flex-shrink-0">
            <img class="product-image" src={imageUrl} />
        </div>
        <div class="flex flex-col p-2 pt-8 gap-3 justify-center">
            <div class="text-3xl text-brand font-semibold">{title}</div>
            <div class="text-justify text-slate-400">{desc}</div>
            <div class="flex items-center">
                <div class="self-start text-2xl text-brand font-bold">Q {price.toFixed(2)}</div>
                <div class="flex-1"></div>
            </div>
            <div class="flex justify-end gap-3">
                <button class="rounded-md bg-teal-700 transition-colors hover:bg-teal-600 active:bg-teal-800 text-white p-2 px-4">Add to cart</button>
                <button class="rounded-md bg-teal-700 transition-colors hover:bg-teal-600 active:bg-teal-800 text-white p-2 px-4">Buy now</button>    
            </div>
            <a href="/" class="self-end">
                <button class="mt-2 rounded-md bg-gray-200 transition-colors hover:bg-gray-100 active:bg-gray-300 text-gray-600 p-2 px-4">Continue exploring</button>
            </a>
        </div>
    </div>
</div>

<style>
    .badge {
        background: #4c615d;
        position: absolute;
        top: 0;
        right: 0;
    }
	.product-card {
		width: 100%;
        align-self: flex-start;
	}
	.product-image {
		height: 550px;
		align-self: center;
	}
</style>
