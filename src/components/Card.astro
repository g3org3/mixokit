---
export interface Props {
	title: string;
	price: number;
	desc?: string;
	imageUrl: string;
	code?: string;
	tag: string
}
const { title, price, tag, imageUrl, code } = Astro.props;

---

<a href={`/product/${code || 'ab123'}`}>
	<div class="product-card flex flex-col bg-white shadow-md p-3 pt-3 gap-2">
		<div class="font-extralight text-sm">#{tag}</div>
		<img class="product-image" src={imageUrl} />
		<div class="text-right px-2 text-2xl font-bold">Q {price.toFixed(2)}</div>
		<div class="text-left">{title}</div>
		<div class="flex items-center justify-between my-2">
			<button class="bg-teal-700 text-white p-1 px-4 rounded-md">add to cart</button>
			<button class="bg-teal-600 text-white p-1 px-4 rounded-md">buy now</button>
		</div>
	</div>
</a>

<style>
	.product-card {
		width: 240px;
	}
	.product-image {
		height: 150px;
		align-self: center;
	}
</style>
